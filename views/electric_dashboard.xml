<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- Vista Gráfico para Dispositivos -->
<record id="view_electric_asset_management_dispositivo_graph" model="ir.ui.view">
<field name="name">electric.asset.management.dispositivo.graph</field>
<field name="model">electric.asset.management.dispositivo</field>
<field name="arch" type="xml">
<graph>
<field name="id_zona" type="row"/>
<field name="consumo_mensual_kwh" type="measure" operator="+"/>
<field name="tipo" type="col"/>
<field name="eficiencia_operativa" widget="progressbar"/>
</graph>
</field>
</record>

<!-- Vista Pivot para Dispositivos -->
<record id="view_electric_asset_management_dispositivo_pivot" model="ir.ui.view">
<field name="name">electric.asset.management.dispositivo.pivot</field>
<field name="model">electric.asset.management.dispositivo</field>
<field name="arch" type="xml">
<pivot>
<field name="id_zona" type="col"/>
<field name="tipo" type="row"/>
<field name="consumo_mensual_kwh" operator="+" type="measure"/>
<field name="eficiencia_operativa" operator="avg" type="measure"/>
</pivot>
</field>
</record>

<!-- Acción Principa -->
<record id="action_electric_asset_management_dispositivo" model="ir.actions.act_window">
<field name="name">Dispositivos Energéticos</field>
<field name="res_model">electric.asset.management.dispositivo</field>
<field name="view_mode">tree,form,graph,pivot</field>
<field name="help" type="html">
<p class="oe_view_nocontent_create">No hay dispositivos registrados. Haz clic para crear uno nuevo.</p>
</field>
</record>
</odoo>

